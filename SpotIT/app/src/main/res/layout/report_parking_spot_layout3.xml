    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="36dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="18dp"
            android:paddingLeft="18dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fab_free_3"
                    android:onClick="buttonReportParkingState"
                    android:background="@drawable/round_corner_green2"
                    android:minWidth="72dp"
                    android:minHeight="72dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Free"
                android:paddingTop="5dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="18dp"
            android:paddingLeft="18dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fab_moderate_3"
                    android:onClick="buttonReportParkingState"
                    android:background="@drawable/round_corner_yellow2"
                    android:minWidth="72dp"
                    android:minHeight="72dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Medium"
                android:paddingTop="5dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="18dp"
            android:paddingLeft="18dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fab_full_3"
                    android:onClick="buttonReportParkingState"
                    android:background="@drawable/round_corner_red2"
                    android:minWidth="72dp"
                    android:minHeight="72dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Full"
                android:paddingTop="5dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>