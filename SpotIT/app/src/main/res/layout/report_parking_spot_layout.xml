<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">


	<LinearLayout
		android:id="@+id/dialog_data"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:fontFamily="sans-serif-thin"
			android:gravity="center|bottom"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:text="Report spot"
			android:paddingTop="@dimen/activity_vertical_margin"
			android:paddingBottom="@dimen/activity_vertical_margin"
			android:textColor="@color/colorLight"
			android:textSize="48dp"/>
		<!--android:text="Report a spot"-->

		<LinearLayout
			android:id="@+id/report_buttons_container"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center|bottom"
			android:orientation="horizontal"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingBottom="@dimen/activity_vertical_margin"
			>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_horizontal"
				android:orientation="vertical"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				>


				<ImageButton
					android:id="@+id/fab_free"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:alpha="0.9"
					android:elevation="6dp"
					android:background="@drawable/round_corner_green2"
					android:minHeight="72dp"
					android:minWidth="72dp"
					android:onClick="buttonReportParkingState"
					/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:fontFamily="sans-serif-thin"
					android:gravity="center"
					android:paddingTop="@dimen/activity_vertical_margin"
					android:paddingBottom="@dimen/activity_vertical_margin"
					android:text="Free"
					android:textColor="@color/colorLight"
					android:textSize="16dp"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_horizontal"
				android:orientation="vertical"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				>

				<ImageButton
					android:id="@+id/fab_moderate"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:alpha="0.9"
					android:elevation="6dp"

					android:background="@drawable/round_corner_yellow2"
					android:minHeight="72dp"
					android:minWidth="72dp"
					android:onClick="buttonReportParkingState"
					android:padding="1dp"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:fontFamily="sans-serif-thin"
					android:gravity="center"
					android:paddingTop="@dimen/activity_vertical_margin"
					android:paddingBottom="@dimen/activity_vertical_margin"
					android:text="Medium"
					android:textColor="@color/colorLight"
					android:textSize="16dp"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_horizontal"
				android:orientation="vertical"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				>

				<ImageButton
					android:id="@+id/fab_full"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:alpha="0.9"
					android:elevation="6dp"
					android:background="@drawable/round_corner_red2"
					android:minHeight="72dp"
					android:minWidth="72dp"
					android:onClick="buttonReportParkingState"
					android:padding="1dp"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:fontFamily="sans-serif-thin"
					android:gravity="center"
					android:paddingTop="@dimen/activity_vertical_margin"
					android:paddingBottom="@dimen/activity_vertical_margin"
					android:text="Full"
					android:textColor="@color/colorLight"
					android:textSize="16dp"
					/>
			</LinearLayout>

		</LinearLayout>
	</LinearLayout>
</RelativeLayout>