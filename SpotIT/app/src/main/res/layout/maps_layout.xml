<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	tools:context=".MainActivity">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<include
			android:id="@+id/toolbar_layout"
			layout="@layout/toolbar"/>

		<include
			layout="@layout/maps_fragment"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/toolbar_layout"/>

	</RelativeLayout>

	<include
		layout="@layout/location_info_layout"/>

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/fab_report_state"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end|bottom"
		android:layout_margin="@dimen/fab_margin"
		android:onClick="buttonOpenParkingStateOptions"
		android:src="@drawable/logo_spot_it_p"
		app:backgroundTint="@color/colorLight"
		app:layout_behavior="com.it.spot.maps.gui.ParkingStateButtonBehavior"/>

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/my_location"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end|bottom"
		android:layout_margin="@dimen/fab_margin"
		android:onClick="buttonCenterOnLocation"
		android:src="@drawable/ic_my_location_black_24dp"
		app:backgroundTint="@color/colorLight"
		app:layout_behavior="com.it.spot.maps.gui.CenterOnLocationButtonBehavior"/>

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/directions_fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/fab_margin"
		android:onClick="buttonDirections"
		android:src="@drawable/ic_directions_walk_white_24dp"
		android:visibility="invisible"
		app:backgroundTint="#ff4e5c"
		app:layout_anchor="@id/location_info_bar"
		app:layout_anchorGravity="top|end"/>


</android.support.design.widget.CoordinatorLayout>
	<LinearLayout
		android:id="@+id/report_spot_reveal"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:visibility="invisible"
		>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"/>

	<LinearLayout
		android:id="@+id/dialog_data"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="vertical"
		android:background="@color/colorPrimary"
		>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:fontFamily="sans-serif-thin"
			android:gravity="right|bottom"
			android:paddingBottom="@dimen/activity_vertical_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:paddingTop="24dp"
			android:text="Report a spot"
			android:textColor="@color/colorLight"
			android:textSize="30dp"/>

		<LinearLayout
			android:id="@+id/report_buttons_container"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center|bottom"
			android:orientation="horizontal"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingTop="@dimen/activity_vertical_margin"
			android:paddingBottom="@dimen/activity_vertical_margin"
			>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_horizontal"
				android:orientation="vertical"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				>


				<ImageButton
					android:id="@+id/fab_free"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:alpha="0.9"
					android:elevation="6dp"
					android:background="@drawable/round_corner_green2"
					android:minHeight="72dp"
					android:minWidth="72dp"
					android:onClick="buttonReportParkingState"
					/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:fontFamily="sans-serif-thin"
					android:gravity="center"
					android:paddingTop="5dp"
					android:text="Free"
					android:textColor="@color/colorLight"
					android:textSize="16dp"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_horizontal"
				android:orientation="vertical"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				>

				<ImageButton
					android:id="@+id/fab_moderate"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:alpha="0.9"
					android:elevation="6dp"
					android:background="@drawable/round_corner_yellow2"
					android:minHeight="72dp"
					android:minWidth="72dp"
					android:onClick="buttonReportParkingState"
					android:padding="1dp"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:fontFamily="sans-serif-thin"
					android:gravity="center"
					android:paddingTop="5dp"
					android:text="Medium"
					android:textColor="@color/colorLight"
					android:textSize="16dp"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_horizontal"
				android:orientation="vertical"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				>

				<ImageButton
					android:id="@+id/fab_full"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:alpha="0.9"
					android:elevation="6dp"
					android:background="@drawable/round_corner_red2"
					android:minHeight="72dp"
					android:minWidth="72dp"
					android:onClick="buttonReportParkingState"
					android:padding="1dp"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:fontFamily="sans-serif-thin"
					android:gravity="center"
					android:paddingTop="5dp"
					android:text="Full"
					android:textColor="@color/colorLight"
					android:textSize="16dp"/>
			</LinearLayout>
			</LinearLayout>
	</LinearLayout>
	</LinearLayout>
		<!--&lt;!&ndash;<include&ndash;&gt;-->
		<!--&lt;!&ndash;android:id="@+id/report_spot"&ndash;&gt;-->
		<!--&lt;!&ndash;layout="@layout/report_parking_spot_layout"/>&ndash;&gt;-->

</FrameLayout>