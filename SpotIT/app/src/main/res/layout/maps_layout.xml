<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	tools:context=".MainActivity">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<include
			android:id="@+id/toolbar_layout"
			layout="@layout/toolbar"/>

		<include
			layout="@layout/maps_fragment"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/toolbar_layout"/>

	</RelativeLayout>

	<include
		layout="@layout/location_info_layout"/>

	<com.it.spot.maps.ClipRevealFrame
		android:id="@+id/menu_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#3b3b58"
		android:visibility="invisible"
		>

		<com.ogaclejapan.arclayout.ArcLayout
			android:id="@+id/arc_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:arc_axisRadius="20dp"
			app:arc_origin="center"
			app:arc_radius="100dp"
			>
			<include
				android:id="@+id/report_parking_spot_layout"
				layout="@layout/report_parking_spot_layout"/>
		</com.ogaclejapan.arclayout.ArcLayout>

	</com.it.spot.maps.ClipRevealFrame>

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/fab_state_v2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end|bottom"
		android:layout_margin="@dimen/fab_margin"
		android:onClick="buttonOpenParkingStateOptionsV2"
		android:src="@drawable/logo_spot_it_p"
		app:backgroundTint="@color/colorLight"
		app:layout_behavior="com.it.spot.maps.ParkingStateV2ButtonBehavior"/>

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/my_location"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end|bottom"
		android:layout_margin="@dimen/fab_margin"
		android:onClick="buttonCenterOnLocation"
		android:src="@drawable/ic_my_location_black_24dp"
		app:backgroundTint="@color/colorLight"
		app:layout_behavior="com.it.spot.maps.CenterOnLocationButtonBehavior"/>

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/directions_fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/fab_margin"
		android:onClick="buttonDirections"
		android:src="@drawable/ic_directions_walk_white_24dp"
		android:visibility="invisible"
		app:backgroundTint="#ff4e5c"
		app:layout_anchor="@id/location_info_bar"
		app:layout_anchorGravity="top|end"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="start|bottom"
		android:orientation="horizontal"
		android:visibility="gone"
		app:layout_behavior="com.it.spot.maps.ParkingStateButtonsBehavior">

		<android.support.design.widget.FloatingActionButton
			android:id="@+id/fab_free"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="buttonReportParkingState"
			android:layout_margin="@dimen/fab_margin"
			android:src="@drawable/ic_local_parking_black_24dp"
			app:backgroundTint="@color/colorLight"/>

		<android.support.design.widget.FloatingActionButton
			android:id="@+id/fab_moderate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="buttonReportParkingState"
			android:layout_margin="@dimen/fab_margin"
			android:src="@drawable/ic_local_parking_black_24dp"
			app:backgroundTint="@color/colorLight"/>

		<android.support.design.widget.FloatingActionButton
			android:id="@+id/fab_full"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="buttonReportParkingState"
			android:layout_margin="@dimen/fab_margin"
			android:src="@drawable/ic_local_parking_black_24dp"
			app:backgroundTint="@color/colorLight"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="start|bottom"
		android:orientation="vertical"
		android:visibility="gone"
		app:layout_behavior="com.it.spot.maps.ParkingStateButtonsBehavior">

		<android.support.design.widget.FloatingActionButton
			android:id="@+id/fab_free_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_margin="@dimen/fab_margin"
			android:onClick="buttonReportParkingState"
			android:src="@drawable/ic_local_parking_black_24dp"
			android:visibility="gone"
			app:backgroundTint="@color/colorLight"
			app:fabSize="mini"/>

		<android.support.design.widget.FloatingActionButton
			android:id="@+id/fab_moderate_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_margin="@dimen/fab_margin"
			android:onClick="buttonReportParkingState"
			android:src="@drawable/ic_local_parking_black_24dp"
			android:visibility="gone"
			app:backgroundTint="@color/colorLight"
			app:fabSize="mini"/>

		<android.support.design.widget.FloatingActionButton
			android:id="@+id/fab_full_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_margin="@dimen/fab_margin"
			android:onClick="buttonReportParkingState"
			android:src="@drawable/ic_local_parking_black_24dp"
			android:visibility="gone"
			app:backgroundTint="@color/colorLight"
			app:fabSize="mini"/>

		<android.support.design.widget.FloatingActionButton
			android:id="@+id/fab_state"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/fab_margin"
			android:onClick="buttonOpenParkingStateOptions"
			android:src="@drawable/ic_local_parking_black_24dp"
			app:backgroundTint="@color/colorLight"/>

	</LinearLayout>

</android.support.design.widget.CoordinatorLayout>